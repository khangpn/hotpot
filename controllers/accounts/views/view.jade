extends ../../../views/layout

block content
  div.panel.panel-default
    div.panel-heading
      h3.panel-title Profile
    div.panel-body
      div.row
        label.col-md-1 Username:
        div.col-md-11
          = account.name
      div.row
        label.col-md-1 Password:
        div.col-md-11
          //= account.password
          a.btn.btn-primary(href="/accounts/update_password/" + account.id,
            role="button")
            | Update Password
      if account.security_level
        div.row
          label.col-md-1 Security Level:
          div.col-md-11
            = account.security_level.name
      if roles
        div.row
          label.col-md-1 Roles:
          each role, index in roles
            div.col-md-11
              = role.name + ' '
      if projects
        div.row
          label.col-md-1 Projects:
          each project, index in projects
            div.col-md-11
              = project.name + ' '
      hr
      // error output
      if error
        div.row
          div.alert.alert-danger(role="alert")
            ul
              - errors = error.errors;
              each val, index in errors
                li= val.message
      // creation form
      div.row
        div.col-md-6
          include ./_details_form.jade
