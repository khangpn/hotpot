form.form-horizontal(action=(!project || project.isNewRecord) ? '/projects/create' : '/projects/update',
  method='post')
  if !project || project.isNewRecord
    div.form-group
      label.col-sm-2.control-label(for='Project_name') Name
      div.col-sm-10
        input.form-control(type='text',
          name='name',
          id='Project_name',
          placeholder='Project name',
          value=project ? project.name : '') 
  else
    input.form-control(type='hidden',
      name='id',
      value=project ? project.id : '') 
  div.form-group
    label.col-sm-2.control-label(for='Project_description') Description
    div.col-sm-10
      textarea.form-control(name='description',
        id='Project_description',
        placeholder='Description')
        =project ? project.description : ''
  div.form-group
    label.col-sm-2.control-label(for='Project_due_date') Due date
    div.col-sm-10
      input.form-control(type='date',
        name='due_date',
        id='Project_due_date',
        value=project ? project.due_date : '') 
  div.form-group
    div.col-sm-offset-2.col-sm-10
      input.btn.btn-default(type='submit' value='Submit')
