extends ../../../views/layout

block content
  div.row
    div.page-header
      h1 Create article
    // error output
    if error
      div.row
        div.alert.alert-danger(role="alert")
          ul
            - errors = error.errors;
            each val, index in errors
              li= val.message
    // creation form
    div.col-md-9
      if directory
        include ./_directory_form.jade
      else
        include ./_form.jade
