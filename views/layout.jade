doctype html
html
  head
    title= 'HotPot'
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    //link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/jquery-1.11.3.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
  body
    //nav.navbar.navbar-default.navbar-fixed-top.bs-docs-nav
    header#top.navbar.navbar-static-top.navbar-default.bs-docs-nav(role="banner")
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(
            type="button",
            data-toggle="collapse",
            data-target="#bs-example-navbar-collapse-1",
            aria-expanded="false")
            span.sr-only
              Toggle navigation
          a.navbar-brand(href="/")
            | HotPot
        div.collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav
            //li.active
            li.dropdown
              a.dropdown-toggle(href="#",
                data-toggle="dropdown",
                role="button",
                aria-haspopup="true",
                aria-expanded="false")
                | Accounts
                span.caret
              ul.dropdown-menu
                li
                  a(href="/accounts")
                    | Accounts list
                li
                  a(href="/accounts/create")
                    | Create account
            li.dropdown
              a.dropdown-toggle(href="#",
                data-toggle="dropdown",
                role="button",
                aria-haspopup="true",
                aria-expanded="false")
                | Projects
                span.caret
              ul.dropdown-menu
                li
                  a(href="/projects")
                    | Projects list
                li
                  a(href="/projects/create")
                    | Create project
    div.container
      block content
